<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.ShowMigQueActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/rounded_rectangle_white_bg"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.75"
            android:background="@drawable/rounded_rectangle_blue_bg"
            android:orientation="horizontal"

            >

            <TextView
                android:id="@+id/migQueTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:paddingLeft="4sp"
                android:paddingTop="4sp"
                android:paddingRight="4sp"
                android:paddingBottom="4sp"
                android:gravity="left"
                android:scrollbars="vertical"
                android:scrollHorizontally="false"
                android:text="Que. Do you have headache? dsfghjkl sdfghjkl fgdhjkl dfghjk gfhjk iuytre cvbnm dfsgh in the end of text"
                android:textColor="@color/colorWhite"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:gravity="center"
            android:orientation="horizontal"
            android:background="@color/colorMetallicBackground">

            <RadioGroup
                android:id="@+id/radioGroupMigQue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/migQueYesRadBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="onRadioButtonClicked"
                    android:paddingRight="8dp"
                    android:text="@string/yes" />

                <RadioButton
                    android:id="@+id/migQueNoRadBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="onRadioButtonClicked"
                    android:paddingRight="8dp"
                    android:text="@string/no" />
            </RadioGroup>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>