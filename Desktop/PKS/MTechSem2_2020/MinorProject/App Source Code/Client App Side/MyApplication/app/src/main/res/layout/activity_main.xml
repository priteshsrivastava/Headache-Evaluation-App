<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9EF1EAF4"
    tools:context=".MainActivity">

    <ViewFlipper
        android:id="@+id/v_flipper"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true">

    </ViewFlipper>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="230dp"
        android:text="@string/welcome_to_hema"
        android:textSize="24sp"
        android:textStyle="bold"
        android:visibility="visible"
        android:gravity="center_horizontal"
        android:textColor="@color/colorPrimaryDark"
        >

    </TextView>


    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="74dp"
        android:background="@drawable/rounded_shape_button"
        android:drawableStart="@drawable/ic_input_black_24dp"
        android:drawableLeft="@drawable/ic_input_black_24dp"
        android:onClick="login"
        android:text="@string/login"
        android:textColor="#FDFAFA" />

    <Button
        android:id="@+id/button1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:drawableLeft="@drawable/ic_info_black_24dp"
        android:background="@drawable/rounded_shape_button"
        android:onClick="callAboutApp"
        android:text="@string/about_app_btn"
        android:textColor="#FDFAFA"
        android:drawableStart="@drawable/ic_info_black_24dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="298dp"
        android:gravity="center|center_horizontal"
        android:text="@string/enter_patient_id"
        android:textSize="18sp"
        android:textColor="@color/colorPrimaryDark" />

    <EditText
        android:id="@+id/editTextPid"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="72dp"
        android:layout_marginRight="72dp"
        android:layout_below="@+id/textView"
        android:layout_centerInParent="true"
        android:background="@drawable/rounded_rectangle"
        android:cursorVisible="true"
        android:drawableLeft="@drawable/ic_account_box_black_24dp"
        android:drawablePadding="10dp"
        android:inputType="textPersonName"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:autofillHints="@string/patient_id"
        android:drawableStart="@drawable/ic_account_box_black_24dp" />


</RelativeLayout>